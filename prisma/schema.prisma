generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id        String   @id @default(uuid(version: 7))
  name      String
  countryId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  country Country @relation(fields: [countryId], references: [id])
}

model Country {
  id        String   @id @default(uuid(version: 7))
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  cities    City[]
}

enum Status {
  ACTIVE
  INACTIVE
}
